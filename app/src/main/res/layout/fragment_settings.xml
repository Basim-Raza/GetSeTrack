<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="18dp"
    tools:context="com.example.basimraza.vehiclestrackingsystem.SettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customerName"
        android:layout_marginTop="72dp"
        android:text="Ali ul Hasan"
        android:textStyle="bold"
        android:textSize="27sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customerVehicle"
        android:layout_marginTop="18dp"
        android:text="Ferrari 488 spider"
        android:textSize="23sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customerNumber"
        android:layout_marginTop="18dp"
        android:text="0333 0000110"
        android:textSize="23sp"
        android:textColor="#000"/>

</LinearLayout>
